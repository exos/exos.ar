{
  "name": "exos.ar",
  "version": "1.0.0",
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "npx husky",
    "build": "npx turbo run build",
    "lint": "npx turbo run lint",
    "lint-staged": "npx lint-staged"
  },
  "author": "Exos <oscar@corporacioncapsula.io>",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npm run lint -- -- --fix",
      "npx prettier --write --ignore-unknown"
    ],
    "**/*.{json,md,mdx,html,css,scss,yml,yaml}": [
      "npx prettier --write --ignore-unknown"
    ]
  }
}
